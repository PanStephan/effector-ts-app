{
  "compilerOptions": {
    "jsx": "react",
    "lib": ["es5", "es6", "dom"],
    "module": "commonjs",
    "target": "es5",
    "outDir": "./built",
    "sourceMap": true,
    "allowJs": true,
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
  },
  "exclude": [
    "node_modules",
    "build",
  ],
  "include": [
    "src/**/*"
  ]
}
